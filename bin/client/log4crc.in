<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE log4c SYSTEM "">
<log4c version="1.2.1">
    <config>
        <bufsize>0</bufsize>
        <debug level="2"/>
        <nocleanup>0</nocleanup>
        <reread>1</reread>
    </config>

    <!-- root category -->
    <category name="root" priority="debug" appender="to_file"/>
    <category name="mycat" priority="debug" appender="stdout"/>
    <category name="file" priority="debug" appender="One_City_Log"/>
 
    <!-- default appenders -->
    <appender name="stdout" type="stream" layout="basic"/>
    <appender name="to_file" type="rollingfile" logdir="log" prefix="chat_log" layout="dated" rollingpolicy="RollingPolicy"/>
    <appender name="stderr" type="stream" layout="dated"/>
    <appender name="syslog" type="syslog" layout="basic"/>
 
    <!-- default layouts -->
    <layout name="basic" type="basic"/>
    <layout name="dated" type="dated"/>
 
    <!--sizewin表示达到最大值后新建日志文件  值由maxsize设定, 单位Bytes     maxnum为最大文件数目 maxsize=5mb -->
    <rollingpolicy name="RollingPolicy" type="sizewin" maxsize="102400" maxnum="32767" />
</log4c>